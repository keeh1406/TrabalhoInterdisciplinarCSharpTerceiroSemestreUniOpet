@model IEnumerable<Aula1.Models.Venda>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Vendas";
}

<div class="panel	panel-primary">
    <div class="panel-heading">
        Relação	de Vendas Registrados
    </div>
    <div class="panel-body">
        <table class="table	table-striped	table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.VendaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuantidadeProduto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Produto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cliente)
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VendaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantidadeProduto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cliente.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.VendaId })	|
                            @Html.ActionLink("Detalhes", "Details", new { id = item.VendaId })	|
                            @Html.ActionLink("Deletar", "Delete", new { id = item.VendaId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer	panel-info">
        @Html.ActionLink("Criar nova venda", "Create", null, new { @class = "btn	btn-success" })
    </div>
</div>
@section	styles{<link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />}
@section	ScriptPage	{
    <script src=" @Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ready(function () {
                $('li').removeClass("active");
                $('#liVendas').addClass("active");
                $('.table').dataTable({ "order": [[1, "asc"]] });
        });
    </script>
}