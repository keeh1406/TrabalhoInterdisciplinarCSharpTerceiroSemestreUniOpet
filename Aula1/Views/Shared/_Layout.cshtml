<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,
								initial-scale=1.0" charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/bootstrap.css")"
          rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="page-header	bg-danger">
                <h1>
                    MaisCadastros
                    <small class="text-danger">
                        Projeto Interdisciplinar
                    </small>
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3	col-md-3	bg-success">
                <ul class="nav	nav-pills	nav-stacked">
                    <li role="presentation" class="active"></li>
                    <li role="presentation">
                        @Html.ActionLink("Home","Index", "Home")
                    </li>
                    <li role="presentation">
                        @Html.ActionLink("Clientes", "Index", "Clientes")
                    </li>
                    <li role="presentation">
                        @Html.ActionLink("Funcionarios", "Index", "Funcionarios")
                    </li>
                    <li role="presentation">
                        @Html.ActionLink("Lojas","Index", "Lojas")
                    </li>
                    <li role="presentation">
                        @Html.ActionLink("Produtos","Index", "Produtos")
                    </li>
                    <li role="presentation">
                        @Html.ActionLink("Vendas","Index", "Vendas")
                    </li>
                </ul>
            </div>
            <div class="col-xs-9	col-md-9">
                <br />
                @RenderBody()
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-12	col-md-12	bg-danger">
                <small>Layout MaisCadastros</small>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/scripts/jquery-3.2.1.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap.js")"></script>
    @RenderSection("ScriptPage",false)
</body>
</html>